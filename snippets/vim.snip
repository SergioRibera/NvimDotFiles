snippet     ifmakefile
abbr        if makefile ... endif
options     head
	if globpath('.', '?akefile*') ==? ''
		compiler ${0:TARGET}
	endif

snippet     ifplugin
abbr        if !exists("g:loaded_{plugin}")
options     head
	if !exists('g:loaded_${1}')
		finish
	endif

snippet     function
abbr        function ... endfunction
options     head
	" ${2:doc}
	function! ${1} "{{{
		${0:TARGET}
	endfunction "}}}

